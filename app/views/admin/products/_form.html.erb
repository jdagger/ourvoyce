<%= form_for [:admin, @product] do |f| %>
	<% if @product.errors.any? %>
		<div id="errorExplanation">
			<h2><%= pluralize(@product.errors.count, "error") %> prohibited this post from being saved:</h2>
			<ul>
				<% @product.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="admin-edit">

	<div class="container">
		<div class="label"><%= f.label :upc %></div>
		<div class="value"><%= f.text_field :upc %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :ean %></div>
		<div class="value"><%= f.text_field :ean %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :name %></div>
		<div class="value"><%= f.text_field :name %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :description %></div>
		<div class="value"><%= f.text_area :description, :style => "width: 30em", :rows => "4" %></div>
	</div>

	<div class="container">
		<div class="label">Created:</div>
		<div class="value"><%= @product.created_at %></div>
	</div>

	<div class="container">
		<div class="label">Modified:</div>
		<div class="value"><%= @product.updated_at %></div>
	</div>


	<div class="container">
		<div class="label"><%= f.label :source %></div>
		<div class="value"><%= f.text_field :source %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :found %></div>
		<div class="value"><%= f.text_field :found %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :status %></div>
		<div class="value"><%= f.text_field :status %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :message %></div>
		<div class="value"><%= f.text_field :message %></div>
	</div>

	<div class="container">
		<div class="label"><%= f.label :logo %></div>
		<div class="value"><%= f.text_field :logo %></div>
	</div>

      <div class="container">
        <div class="label"><%= f.label :pending, "Pending: (1 for pending, 0 for not pending)" %></div>
        <div class="value"><%= f.text_field :pending %></div>
      </div>

		<div class="actions">
			<%= f.submit %>
		</div>
	</div>

<% end %>