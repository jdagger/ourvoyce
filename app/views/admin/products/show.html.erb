<%= notice %>

<div class="admin-show">
	<h1>Product Details</h1>

	<div class="container">
		<div class="label">UPC:</div>
		<div class="value"><%= @product.upc %></div>
	</div>

	<div class="container">
		<div class="label">EAN:</div>
		<div class="value"><%= @product.ean %></div>
	</div>

	<div class="container">
		<div class="label">Name:</div>
		<div class="value"><%= @product.name %></div>
	</div>

	<div class="container">
		<div class="label">Description:</div>
		<div class="value"><%= @product.description %></div>
	</div>

	<div class="container">
		<div class="label">Created:</div>
		<div class="value"><%= @product.created_at %></div>
	</div>

	<div class="container">
		<div class="label">Modified:</div>
		<div class="value"><%= @product.updated_at %></div>
	</div>

	<div class="container">
		<div class="label">Source:</div>
		<div class="value"><%= @product.source %></div>
	</div>

	<div class="container">
		<div class="label">Found:</div>
		<div class="value"><%= @product.found %></div>
	</div>

	<div class="container">
		<div class="label">Status:</div>
		<div class="value"><%= @product.status %></div>
	</div>

	<div class="container">
		<div class="label">Message:</div>
		<div class="value"><%= @product.message %></div>
	</div>

	<div class="container">
		<div class="label">Image Path:</div>
    <div class="value">
      <img src="<%= get_product_image_128 @product.logo %>" />
      <br />
      <%= @product.logo %>
    </div>
	</div>
  
    <div class="container">
        <div class="label">Pending:</div>
        <div class="value"><%= @product.pending %></div>
    </div>

    <div class="container">
        <div class="label">Default Include:</div>
        <div class="value"><%= @product.default_include %></div>
    </div>
</div>
<%= link_to "Edit", edit_admin_product_path(@product) %>

