<h1>Listing states</h1>

<table>
  <tr>
    <th>Abbreviation</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @states.each do |state| %>
  <tr>
    <td><%= state.abbreviation %></td>
    <td><%= state.name %></td>
    <td><%= link_to 'Show', admin_state_path(state) %></td>
    <td><%= link_to 'Edit', edit_admin_state_path(state) %></td>
    <td><%= link_to 'Destroy', admin_state_path(state), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

