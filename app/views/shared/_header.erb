<div id="header">
  <div id="header-content">
    
    <% cache("header_user_count", :expires_in => 600) do %>
      <div class="counter-area">
        <p>OURVOYCE USERS</p>
        <div class="counter"><p><%= number_with_delimiter(user_count) %></p></div>
      </div>
    <% end %>
    
    <div id="header-nav">
      <ul>
        <% if current_user_session.nil? %>
          <li><%= link_to "Sign In",  :register %></li>
          <%= link_to image_tag('/images/button-create_account.png'), :register %>


        <% else %>
          <li><%= link_to "Settings", :edit_account %></li>
          <li><%= link_to "Logout",  :logout %></li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
