!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %title= yield :title
    = stylesheet_link_tag "compiled/screen.css", :media => "screen, projection"
    = stylesheet_link_tag "compiled/print.css", :media => "print"
    = stylesheet_link_tag "compiled/ie.css", :media => "screen, projection"
    = stylesheet_link_tag "compiled/site.css", :media => "screen, projection"

    = javascript_include_tag "jquery-1.4.3.min.js"
    = javascript_include_tag "rails.js"
    = yield :scripts
    = csrf_meta_tag

    %body.bp
      .container
        #header.span-24.last
          .span-8
            %img{:src => "/images/site/ourvoYce_header.png", :alt => "header"}
          .span-16.last
            .span-16.last
              = link_to "Donate", :donate
              = "|"
              = "Seed money raised: $0 |"
              - if session[:user_id].nil?
                = link_to "Sign In",  :myvoyce_account
                = link_to "Create Account",  :myvoyce_account
              - else
                = link_to "Logout",  :logout
              = "|"
              Number of ourvoYce users:
              =user_count
            #top-menu.span-16.last
              %ul
                %li= link_to "OurVoyce",  :ourvoyce
                %li= link_to "MyVoyce",  :myvoyce
                %li= link_to "Corporate",  :corporates_index
                %li= link_to "Government",  :government_index
                %li= link_to "Media",  :media_index
            #top-menu.span-16.last
              %ul
                %li= "Admin:"
                %li= link_to "Users",  :admin_users
                %li= link_to "Products",  :admin_products
                %li= link_to "Corporations",  :admin_corporations
                %li= link_to "Medias",  :admin_medias
                %li= link_to "Governments",  :admin_governments
                %li= link_to "States",  :admin_states
                %li= link_to "Stats",  "/stats"
                %li= link_to "Log",  :error_log

        = yield
        .clear

        .span-24.last
          .prepend-top
            #footer
              =link_to 'About ourvoYce', :about
              = "|"
              =link_to 'Contact ourvoYce', :contact
              = "|"
              =link_to 'Privacy Policy', :privacy
              = "|"
              =link_to 'Terms of Service', :terms
              = "|"
              =link_to 'Help', :help
              %br
              OurVoyce &copy;2010
        .clear
