- content_for :scripts do
  = javascript_include_tag "change_support.js"
  = javascript_include_tag "map.js"

.span-12
  %fieldset
    %legend Sorting:
    = link_to "Name Asc", :filter => params[:filter], :sort => 'name_asc', :offset => params[:offset]
    |
    = link_to "Name Desc", :filter => params[:filter], :sort => 'name_desc', :offset => params[:offset]
    %br
    = link_to "Social Score Asc", :filter => params[:filter], :sort => 'social_asc', :offset => params[:offset]
    |
    = link_to "Social Score Desc", :filter => params[:filter], :sort => 'social_desc', :offset => params[:offset]
    %br
    = link_to "Participation Rate Asc", :filter => params[:filter], :sort => 'participation_asc', :offset => params[:offset]
    |
    = link_to "Participation Rate Desc", :filter => params[:filter], :sort => 'participation_desc', :offset => params[:offset]
    %br
    = link_to "Vote Date Asc", :filter => params[:filter], :sort => 'votedate_asc', :offset => params[:offset]
    |
    = link_to "Vote Date Desc", :filter => params[:filter], :sort => 'votedate_desc', :offset => params[:offset]

  %fieldset
    %legend Filtering:
    =link_to 'Thumbs Up', :filter => 'thumbsup', :sort => params[:sort], :offset => 0
    |
    =link_to 'Thumbs Down', :filter => 'thumbsdown', :sort => params[:sort], :offset => 0
    |
    =link_to 'Neutral', :filter => 'neutral', :sort => params[:sort], :offset => 0
    |
    =link_to 'Voted', :filter => 'voted', :sort => params[:sort], :offset => 0
    |
    =link_to 'No Vote', :filter => 'novote', :sort => params[:sort], :offset => 0
    ||
    =link_to 'All Records', :filter => '', :sort => params[:sort], :offset => 0

  = render :partial => "shared/paging", :object => @presenter.paging, :as => :paging_data

  %table
    %thead
      %tr
        %th Vote
        %th Name
        %th Logo
        %th Profit
        %th Revenue
        %th SS
        %th PR
    %tbody
    - @presenter.corporations.each do |c|
      %tr
        %td
          =  render :partial => "shared/vote_control", :object =>{:id => c.id, :support_type => c.support_type, :post_url => :corporate_vote}, :as => :d
          = c.updated_at
        %td= c.name
        %td
          %div{:class => 'jq-corporation', :style => 'border: solid 1px red;'}
            %input{:type => :hidden, :class => 'jq-corporation-id', :value =>  c.id}
            %img{:src => get_corporate_image_128(c.logo), :alt => c.name}
        %td= "$#{number_to_human(c.revenue, :precision => 1, :significant => false)}"
        %td= "$#{number_to_human(c.profit, :precision => 1, :significant => false)}"
        %td= c.social_score
        %td= c.participation_rate
.span-12.last
  Maps/Graphs
  .jq-map
